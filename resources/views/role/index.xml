<!DOCTYPE div>
<div xmlns="http://www.w3.org/1999/xhtml" data-v.container="layouts.main" data-v.controller="helpers.category">

    <div class="row">
        <div class="col-md-3">
            <h1>Roles</h1>
            <div id="tree" data-v.xp="tree" data-url="/api/roles"/>
            <div data-v.include="layouts.treemenu"/>
        </div>

        <div class="col-md-6">
            <h2 data-v.child="category.name"/>
            <ul data-v.foreach="roles" data-v.name="role" class="list-group">
                <li class="list-group-item">
                    <a data-v.url="/role/{role.id}/edit">
                        <span data-v.replace="role.name"/>
                    </a>
                </li>
            </ul>

            <div data-v.pagination="layouts.pagination" data-v.name="roles"/>

        </div>
    </div>

    <div class="well text-right">
        <a data-v.url="/segment/create/?role={category.id}" class="btn btn-primary">New Role</a>
    </div>

</div>
