<!DOCTYPE div>
<div xmlns="http://www.w3.org/1999/xhtml" data-v.container="layouts.main">
    <h1 data-v.child="title"/>
    <div class="row" data-v.container="form.form">
        <div class="col-md-8">
            <div data-v.replace="form.base"/>

            <table class="table">
                <thead>
                    <tr>
                        <th>Activity</th>
                        <th>Used</th>
                    </tr>
                </thead>
                <tbody data-v.foreach="form.activities" data-v.name="activity">
                    <tr data-v.replace="activity"/>
                </tbody>
            </table>

            <table class="table">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Used</th>
                    </tr>
                </thead>
                <tbody data-v.foreach="form.categories" data-v.name="category">
                    <tr data-v.replace="category"/>
                </tbody>
            </table>


            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>
</div>

